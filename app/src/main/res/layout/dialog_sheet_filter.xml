<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="200dp">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#FDECCE"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/reset_Btn"
            android:layout_width="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="8dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#00000000"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:text="@string/resetBtnTitle" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/header_bottomSheet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"
                android:layout_margin="16dp"
                android:text="@string/dialogSheetTitle"
                android:textSize="30dp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/title1_equipment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"
                android:layout_margin="16dp"
                android:fontFamily="@font/montserrat"
                android:text="@string/equipmentTitle"
                android:textSize="20dp"
                android:textStyle="bold" />


            <LinearLayout
                android:id="@+id/section1_equipment_filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_margin="4dp">



                <ImageButton
                    android:id="@+id/sec1_short_dumbell_Btn"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_margin="8dp"
                    android:backgroundTint="@color/white"
                    android:scaleType="centerCrop"
                    android:src="@drawable/short_dumbell_unchecked"
                    android:text="@string/shDumbellBtnTitle"
                    android:textSize="20dp">

                </ImageButton>


                <ImageButton
                    android:id="@+id/sec1_long_dumbell_Btn"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_margin="8dp"
                    android:backgroundTint="@color/white"
                    android:scaleType="centerCrop"
                    android:src="@drawable/long_dumbell_unchecked"
                    android:text="@string/lhDumbellBtnTitle"
                    android:textSize="20dp">

                </ImageButton>


                <ImageButton
                    android:id="@+id/sec1_own_bodyweight_Btn"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_margin="8dp"
                    android:backgroundTint="@color/white"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bodyweight_unchecked"
                    android:text="@string/ownBodyBtnTitle"
                    android:textSize="20dp">

                </ImageButton>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/section1_equipment_subtitles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_margin="4dp"
                >



                <TextView
                    android:id="@+id/sec1_short_dumbell"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:text="@string/shDumbellBtnTitle"
                    android:textSize="13dp"
                    android:textStyle="bold">

                </TextView>

                <TextView
                    android:id="@+id/sec1_long_dumbell"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:text="@string/lhDumbellBtnTitle"
                    android:textSize="13dp"
                    android:layout_marginRight="10dp"
                    android:textStyle="bold">

                </TextView>

                <TextView
                    android:id="@+id/sec1_own_bodyweight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginLeft="4dp"
                    android:text="@string/ownBodyBtnTitle"
                    android:textSize="13dp"
                    android:textStyle="bold">

                </TextView>


            </LinearLayout>


            <TextView
                android:id="@+id/title2_instruction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"
                android:layout_margin="16dp"
                android:fontFamily="@font/montserrat"
                android:text="@string/instructionTitle"
                android:textSize="20dp"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/section2_instruction_filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_margin="8dp">



                <ImageButton
                    android:id="@+id/sec2_with_video_Btn"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_margin="8dp"
                    android:backgroundTint="@color/white"
                    android:scaleType="centerCrop"
                    android:src="@drawable/video_unchecked"
                    android:text="@string/videoBtnTitle"
                    android:textSize="20dp">

                </ImageButton>

                <ImageButton
                    android:id="@+id/sec2_no_video_Btn"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_margin="8dp"
                    android:backgroundTint="@color/white"
                    android:scaleType="centerCrop"
                    android:src="@drawable/no_video_unchecked"
                    android:text="@string/noVideoBtnTitle"
                    android:textSize="20dp">

                </ImageButton>


            </RadioGroup>


            <LinearLayout
                android:id="@+id/section2_instructions_subtitles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/sec2_with_video"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/videoBtnTitle"
                    android:textSize="12dp"
                    android:textStyle="bold">

                </TextView>

                <TextView
                    android:id="@+id/sec2_no_video"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:text="@string/noVideoBtnTitle"
                    android:textSize="12dp"
                    android:textStyle="bold">

                </TextView>


            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/results_Btn"
                android:layout_width="match_parent"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                app:cornerRadius="5dp"
                android:backgroundTint="@color/black"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="@string/resultBtnTitle" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/cancel_Btn"
                android:layout_width="match_parent"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:layout_marginBottom="16dp"
                app:cornerRadius="5dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:textColor="@color/tertiary"
                android:textSize="18dp"
                android:text="@string/cancelBtnTitle" />


        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>