<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#FDECCE"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/reset_Btn"
            android:layout_width="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="8dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#00000000"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:text="Zurücksetzen" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/header_bottomSheet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_gravity="start|center"
                android:textStyle="bold"
                android:text="Filter nach"
                android:textSize="30dp" />


            <TextView
                android:id="@+id/title1_equipment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_gravity="start|center"
                android:textStyle="bold"
                android:fontFamily="@font/montserrat"
                android:text="Geräte"
                android:textSize="20dp" />



            <LinearLayout
                android:id="@+id/section1_equipment_filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="4dp">

                <ImageButton
                    android:id="@+id/all"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:text="Alle"
                    android:scaleType="centerCrop"
                    android:backgroundTint="@color/white"
                    android:layout_margin="8dp"
                    android:checked="true"
                    android:textSize="20dp">


                </ImageButton>

                <ImageButton
                    android:id="@+id/short_dumbell"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:backgroundTint="@color/white"
                    android:scaleType="centerCrop"
                    android:src="@drawable/short_dumbell_unchecked"
                    android:layout_margin="8dp"
                    android:text="Kurzhantel"
                    android:textSize="20dp">

                </ImageButton>


                <ImageButton
                    android:id="@+id/long_dumbell"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:backgroundTint="@color/white"
                    android:text="Langhantel"
                    android:layout_margin="8dp"
                    android:textSize="20dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/long_dumbell_unchecked">

                </ImageButton>




                <ImageButton
                    android:id="@+id/own_bodyweight"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:backgroundTint="@color/white"
                    android:layout_margin="8dp"
                    android:text="Eigengewicht"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bodyweight_unchecked"

                    android:textSize="20dp">

                </ImageButton>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/section1_equipment_subtitles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:layout_marginLeft="48dp"
                    android:textStyle="bold"
                    android:text="Alle">

                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kurzhantel"
                    android:layout_marginLeft="36dp"
                    android:textSize="12dp"
                    android:textStyle="bold">

                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:layout_marginLeft="16dp"
                    android:textStyle="bold"
                    android:text="Langhantel">

                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:layout_marginLeft="14dp"
                    android:textStyle="bold"
                    android:layout_gravity="end"
                    android:text="Eigengewicht">

                </TextView>



            </LinearLayout>


            <TextView
                android:id="@+id/title2_instruction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_gravity="start|center"
                android:textStyle="bold"
                android:fontFamily="@font/montserrat"
                android:text="Beschreibung"
                android:textSize="20dp" />

            <LinearLayout
                android:id="@+id/section2_instruction_filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp">

                <ImageButton
                    android:id="@+id/all2"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:backgroundTint="@color/white"
                    android:layout_margin="8dp"
                    android:text="Alle"
                    android:checked="true"
                    android:textSize="20dp">

                </ImageButton>

                <ImageButton
                    android:id="@+id/with_video"
                    android:layout_width="70dp"
                    android:layout_margin="8dp"
                    android:backgroundTint="@color/white"
                    android:layout_height="70dp"
                    android:text="Kurzhantel"
                    android:textSize="20dp">

                </ImageButton>

                <ImageButton
                    android:id="@+id/without_video"
                    android:layout_width="70dp"
                    android:layout_margin="8dp"
                    android:backgroundTint="@color/white"
                    android:layout_height="70dp"
                    android:text="Langhantel"
                    android:textSize="20dp">

                </ImageButton>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/section2_instructions_subtitles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginRight="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:text="Alle">

                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:text="Mit Video">

                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:layout_gravity="end"
                    android:text="Ohne Video">

                </TextView>



            </LinearLayout>




        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>