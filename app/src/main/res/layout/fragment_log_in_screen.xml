<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/logInConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_colour"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/logInText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="16dp"
        android:text="@string/logInScreenText"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textIsSelectable="false"
        android:fontFamily="@font/montserrat"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appLogo" />

    <Button
        android:id="@+id/logInButton"
        style="@style/customButton"
        app:cornerRadius="10dp"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginRight="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="8dp"
        android:text="@string/logInBtnText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/googleSignInBtn" />

    <Button
        android:id="@+id/googleSignInBtn"
        style="@style/googleButton"
        android:text="@string/logInBtnText"
        android:drawableLeft="@drawable/icons8_google_logo_48"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="36dp"
        android:layout_marginLeft="36dp"
        android:drawablePadding="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="58dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/forgotPasswordView" />


    <ProgressBar
        android:id="@+id/logInProgressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/googleSignInBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputPasswordCard" />


    <Button
        android:id="@+id/registerButton"
        style="@style/customSecondaryButton"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        app:cornerRadius="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="36dp"
        android:layout_marginLeft="36dp"
        android:text="@string/registerBtnText"
        android:textColor="@color/tertiary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logInButton"
        app:strokeWidth="1dp" />

    <ImageView
        android:id="@+id/appLogo"
        android:layout_width="226dp"
        android:layout_height="142dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/applogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/inputEmailCard"
        style="@style/customUserInput"
        android:layout_width="match_parent"
        android:layout_marginRight="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="4dp"
        app:strokeWidth="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logInText">

        <EditText
            android:id="@+id/inputEmail"
            style="@style/editTextUserIntput"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:ems="10"
            android:fontFamily="@font/roboto"
            android:hint="@string/eMailInput"
            android:inputType="text"
            android:padding="12dp"
            android:textSize="16dp" />
    </com.google.android.material.card.MaterialCardView>


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/inputPasswordCard"
        android:layout_marginRight="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        style="@style/customUserInput"
        app:cardCornerRadius="4dp"
        app:strokeWidth="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputEmailCard">

        <EditText
            android:id="@+id/inputPassword"
            style="@style/editTextUserIntput"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12dp"
            android:fontFamily="@font/roboto"
            android:textSize="16dp"
            android:background="@null"
            android:hint="@string/passwordInput"
            android:ems="10"
            android:inputType="textPassword" />

    </com.google.android.material.card.MaterialCardView>


    <TextView
        android:id="@+id/forgotPasswordView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:textColor="@color/white"
        android:fontFamily="@font/lato"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:text="@string/forgetPasswordHint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputPasswordCard">

    </TextView>


    <Spinner
        android:id="@+id/languageSpinner"
        android:layout_width="150dp"
        android:background="@color/white"
        android:backgroundTint="?android:attr/textColorPrimary"
        android:layout_margin="16dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


