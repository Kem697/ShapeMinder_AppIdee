<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:backgroundTint="#FDECCE"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >

            <Button
                android:id="@+id/allExerciseReset_Btn"
                android:layout_width="wrap_content"
                android:layout_gravity="end"
                android:layout_margin="8dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#00000000"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:text="@string/resetBtnTitle" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/header_bottomSheet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center"
                    android:layout_margin="16dp"
                    android:text="@string/dialogSheetTitle"
                    android:textSize="30dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/title0_bodypart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center"
                    android:layout_margin="16dp"
                    android:fontFamily="@font/montserrat"
                    android:text="@string/musclegroupTitle"
                    android:textSize="20dp"
                    android:textStyle="bold" />


                <LinearLayout
                    android:id="@+id/section0_bodypart_filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="4dp"
                    android:orientation="vertical">

                    <!-- Erste Reihe -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/sec0_armsBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:layout_weight="1"
                            android:backgroundTint="@color/white"
                            android:scaleType="centerCrop"
                            android:src="@drawable/short_dumbell_unchecked"
                            android:text="Arme"
                            android:textColor="@color/black"
                            android:textSize="16dp" />

                        <Button
                            android:id="@+id/sec0_absBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:layout_weight="1"
                            android:backgroundTint="@color/white"
                            android:scaleType="centerCrop"
                            android:src="@drawable/long_dumbell_unchecked"
                            android:text="Bauch"
                            android:textColor="@color/black"
                            android:textSize="16dp" />

                        <Button
                            android:id="@+id/sec0_legsBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:layout_weight="1"
                            android:backgroundTint="@color/white"
                            android:scaleType="centerCrop"
                            android:src="@drawable/bodyweight_unchecked"
                            android:text="Beine"
                            android:textColor="@color/black"
                            android:textSize="16dp" />
                    </LinearLayout>

                    <!-- Zweite Reihe -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/sec0_chestBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:layout_weight="1"
                            android:backgroundTint="@color/white"
                            android:scaleType="centerCrop"
                            android:src="@drawable/short_dumbell_unchecked"
                            android:text="Brust"
                            android:textColor="@color/black"
                            android:textSize="16dp" />

                        <Button
                            android:id="@+id/sec0_backBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:layout_weight="1"
                            android:backgroundTint="@color/white"
                            android:scaleType="centerCrop"
                            android:src="@drawable/long_dumbell_unchecked"
                            android:text="RÃ¼cken"
                            android:textColor="@color/black"
                            android:textSize="16dp" />

                        <Button
                            android:id="@+id/sec0_shoulderBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:layout_weight="1"
                            android:backgroundTint="@color/white"
                            android:scaleType="centerCrop"
                            android:src="@drawable/bodyweight_unchecked"
                            android:text="Schulter"
                            android:textColor="@color/black"
                            android:textSize="16dp" />
                    </LinearLayout>

                </LinearLayout>


                <TextView
                    android:id="@+id/title1_equipment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center"
                    android:layout_margin="16dp"
                    android:fontFamily="@font/montserrat"
                    android:text="@string/equipmentTitle"
                    android:textSize="20dp"
                    android:textStyle="bold" />


                <LinearLayout
                    android:id="@+id/section1_equipment_filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="4dp"
                    android:orientation="horizontal">


                    <ImageButton
                        android:id="@+id/sec1_short_dumbell_Btn"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_margin="8dp"
                        android:backgroundTint="@color/white"
                        android:scaleType="centerCrop"
                        android:src="@drawable/short_dumbell_unchecked"
                        android:text="Kurzhantel"
                        android:textSize="20dp">

                    </ImageButton>


                    <ImageButton
                        android:id="@+id/sec1_long_dumbell_Btn"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_margin="8dp"
                        android:backgroundTint="@color/white"
                        android:scaleType="centerCrop"
                        android:src="@drawable/long_dumbell_unchecked"
                        android:text="Langhantel"
                        android:textSize="20dp">

                    </ImageButton>


                    <ImageButton
                        android:id="@+id/sec1_own_bodyweight_Btn"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_margin="8dp"
                        android:backgroundTint="@color/white"
                        android:scaleType="centerCrop"
                        android:src="@drawable/bodyweight_unchecked"
                        android:text="Eigengewicht"
                        android:textSize="20dp">

                    </ImageButton>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/section1_equipment_subtitles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="4dp"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/sec1_short_dumbell"
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:text="@string/shDumbellBtnTitle"
                        android:textSize="13dp"
                        android:textStyle="bold">

                    </TextView>

                    <TextView
                        android:id="@+id/sec1_long_dumbell"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="10dp"
                        android:text="@string/lhDumbellBtnTitle"
                        android:textSize="13dp"
                        android:textStyle="bold">

                    </TextView>

                    <TextView
                        android:id="@+id/sec1_own_bodyweight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginLeft="4dp"
                        android:text="@string/ownBodyBtnTitle"
                        android:textSize="13dp"
                        android:textStyle="bold">

                    </TextView>


                </LinearLayout>


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/results_Btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="32dp"
                    android:layout_marginBottom="16dp"
                    android:backgroundTint="@color/black"
                    android:text="@string/resultBtnTitle"
                    android:textSize="18dp"
                    app:cornerRadius="5dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/cancel_Btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:layout_marginRight="32dp"
                    android:layout_marginBottom="16dp"
                    android:backgroundTint="@color/white"
                    android:text="@string/cancelBtnTitle"
                    android:textColor="@color/tertiary"
                    android:textSize="18dp"
                    app:cornerRadius="5dp" />


            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>